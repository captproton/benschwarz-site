!!!
%html{:lang => "en"}
  %head
    %meta{"http-equiv" => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{:name => "description", :content => @article.excerpt}
    %meta{:name => "keywords", :content => @article.keywords}
    %meta{:name => "author", :content => "Ben Schwarz"}
    %meta{:name => "robots", :content => "index, follow"}
    %meta{:name => "verify-v1", :content => "BlTJbJUo6znmPTKrfDI07Fho8QvSw7Q/4NxpM0s4HwU="}   

    /[if IE]
      %script{:src => " http://html5shiv.googlecode.com/svn/trunk/html5.js"}

    %title= "#{@article.title}, written by Ben Schwarz"
    %link{:rel => "stylesheet", :href => "/css/reset.css", :type => "text/css", :media => "screen"}
    %link{:rel => "stylesheet", :href => "/css/base.css", :type => "text/css", :media => "screen"}
    %link{:rel => "alternate", :title => "German for black RSS", :href => "http://www.germanforblack.com/articles.atom", :type => "application/atom+xml"}    
    
  %body{:id => @page_id}
    #wrapper
      %a{:href => '/', :id => "home"} &larr; Home
      %article
        = yield
    %section#footer
      %section
        = partial "about"
        = partial "event"
        = partial "elsewhere"
        = partial "cc"
    %script{ :src => "http://www.google-analytics.com/urchin.js", :type => "text/javascript" }
    %script{ :type => "text/javascript" }
      _uacct = "UA-139707-2";
      urchinTracker();
    %script{:type => "text/javascript", :src => "/js/jquery-1.4.2.min.js"}
    %script{:type => "text/javascript", :src => "/js/track-external.js"}

